	<mx:HBox horizontalAlign="center" width="100%" y="175" height="100%">
		
	<mx:VBox x="379.5" y="175" height="100%">
		<mx:Label  text="Segmentos"/>
		<mx:DataGrid  id="gridLog" height="90%">
			<mx:columns>
				<mx:DataGridColumn headerText="Numero" dataField="numeroSegmento"/>
				<mx:DataGridColumn headerText="Descrição" dataField="descricao"/>
				<mx:DataGridColumn headerText="Horas" dataField="horas"/>
				<mx:DataGridColumn headerText="Qtd" dataField="qtdComp"/>
				<mx:DataGridColumn headerText="JobControl" dataField="jbctStr"/>
			</mx:columns>
		</mx:DataGrid>
		
	</mx:VBox>
	
	<mx:VBox x="819.5" y="175" height="100%">
		
		<mx:Label x="822.5" y="175" text="Segmentos Removidos/Atualizados"/>
		<mx:DataGrid  id="gridRemovida" height="90%">
			<mx:columns>
				<mx:DataGridColumn headerText="Numero" dataField="numeroSegmento"/>
				<mx:DataGridColumn headerText="Descrição" dataField="descricao"/>
				<mx:DataGridColumn headerText="Horas" dataField="horas"/>
				<mx:DataGridColumn headerText="Qtd" dataField="qtdComp"/>
				<mx:DataGridColumn headerText="JobControl" dataField="jbctStr"/>
				<mx:DataGridColumn headerText="Funcionário &#13; Remoção" dataField="nomeFuncionarioRemocao"/>
				<mx:DataGridColumn headerText="Funcionário &#13; Atualização" dataField="nomeFuncionarioEdicao"/>
			</mx:columns>
		</mx:DataGrid>
	</mx:VBox>
